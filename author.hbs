{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{#author}}
{{!-- Everything inside the #author tags pulls data from the author --}}


{{> header background=cover_image}} {{!--Special header.hbs partial to generate the <header> tag--}}
    <div id="author-page" class="container pb-4 text-white">
        {{> "site-nav"}}
            {{#if profile_image}}
            <div class="row py-5">
                <div class="col">
                   <img class="author-profile-image mx-auto" src="{{profile_image}}" alt="{{name}}" />
                </div>
            </div>
            {{/if}}
            <div class="row text-center">
                <div class="col">
                    <h1>{{name}}</h1>
                </div>                
            </div>
            {{#if bio}}
            <div class="row text-center">
                <div class="col">
                    <h2 class="lead">{{bio}}</h2>
                </div>
            </div>
            {{/if}}
            <div class="row pb-5 text-center">
                <div class="col">
                    {{#if location}}
                        <span class="author-location">{{location}} <span class="bull">&bull;</span></span>
                    {{/if}}
                    <span class="author-stats">
                        {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} <span class="bull">&bull;</span>
                    </span>
                    {{#if website}}
                        <a href="{{website}}" target="_blank" rel="noopener"><i class="fas fa-fw fa-globe"></i></a>
                    {{/if}}
                    {{#if twitter}}
                        <a href="{{twitter_url}}" target="_blank" rel="noopener"><i class="fab fa-fw fa-twitter"></i></a>
                    {{/if}}
                    {{#if facebook}}
                        <a href="{{facebook_url}}" target="_blank" rel="noopener"><i class="fab fa-fw fa-facebook-f"></i></a>
                    {{/if}}
                    <a href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/" target="_blank" rel="noopener"><i class="fas fa-fw fa-rss"></i></a>
                </div>                
            </div>

        </div>
    </div>
</header>
{{/author}}

{{!-- The main content area --}}
<main id="site-main">
    <div class="container">
        <div class="post-feed">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}
        </div>
    </div>
</main>
